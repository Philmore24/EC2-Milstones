@using Microsoft.AspNetCore.Identity;

@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "All Roles";
}

<h1> All Roles</h1>

<hr />
<div class="myBackground">
    @if (Model.Any())
    {
        <a class="btn btn-primary" style="width: auto" asp-controller="Administration" asp-action="CreateRole">
            Create Role
        </a>
        <br /><br />

        foreach (var role in Model)
        {
            <div class="card mb-3">
                <div class="card-header">
                    Role Id: @role.Id
                </div>
                <div class="card-body">
                    <h5 class="card-title">@role.Name</h5>
                </div>
                <div class="card-footer">
                    <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                        <a class="btn btn-primary" asp-action="EditRoles" asp-controller="Administration" asp-route-id="@role.Id">Edit</a>
                        <button type="submit" class="btn btn-danger"
                                onclick="return confirm('Are you sure you want to delete this role : @role.Name')">
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        }
    }
    else
    {
        <div class="card">
            <div class="card-header">
                No Roles Created Yet
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    User the Button below to create Role
                </h5>
                <a class="btn btn-primary" style="width: auto" asp-controller="Administration" asp-action="CreateRole">
                    Create Role
                </a>
            </div>
        </div>
    }
</div>
