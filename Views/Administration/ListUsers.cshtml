@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "All Users";
}

<h1> All Users</h1>

<hr />

<div class="myBackground">
    @if (Model.Any())
    {
        <a class="btn btn-primary" style="width: auto" asp-controller="Account" asp-action="Register">
            Add new User
        </a>
        <br />
        <br />

        foreach (var user in Model)
        {
            <div class="card-deck">
                <div class="card mb-3">
                    <div class="card-header">
                        User Id: @user.Id
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"> Name : @user.Firstname @user.Lastname</h5>
                        <h5 class="card-title">Email: @user.Email</h5>
                        <h5 class="card-title">Username : @user.UserName</h5>
                    </div>
                    <div class="card-footer">
                        <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                            <a class="btn btn-primary" asp-action="EditUser" asp-controller="Administration" asp-route-id="@user.Id">Edit</a>
                            <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('Are you sure you want to delete this user : @user.UserName')">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="card">
            <div class="card-header">
                No Users Created Yet
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    User the Button below to create User
                </h5>
                <a class="btn btn-primary" style="width: auto" asp-controller="Account" asp-action="Register">
                    Create User
                </a>
            </div>
        </div>
    }
</div>