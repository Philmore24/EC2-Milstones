@model IEnumerable<EC2_1701497.Models.Book>

@{
    ViewData["Title"] = "Manage Books";
}

<h1>Manage Books</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="card-deck myBackground">
    @foreach (var item in Model)
    {
        <div class="row row-cols-1 row-cols-md-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="~/Images/@item.Image" class="img-fluid rounded-start" alt="BookImage">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                            @Html.DisplayNameFor(model => model.Author) :  @Html.DisplayFor(modelItem => item.Author) <br />
                            @Html.DisplayNameFor(model => model.PublishDate) :  @Html.DisplayFor(modelItem => item.PublishDate) <br />
                            @Html.DisplayNameFor(model => model.Quantity) :  @Html.DisplayFor(modelItem => item.Quantity) <br />
                            @Html.DisplayNameFor(model => model.Price) :  @Html.DisplayFor(modelItem => item.Price) <br />
                            <div class="card-footer text-center">
                                <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.ISBN">Edit</a> |
                                <a asp-action="Details" class="btn btn-success" asp-route-id="@item.ISBN">Details</a> |
                                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ISBN">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

